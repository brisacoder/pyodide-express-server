# Production Environment Variables for AWS Deployment
NODE_ENV=production
PORT=3000

# Application Configuration
APP_NAME=Pyodide Express Server
APP_VERSION=1.0.0

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/server.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Security Configuration (internal deployment - minimal security)
HELMET_DISABLED=false
CORS_ORIGIN=*
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Pyodide Configuration
PYODIDE_TIMEOUT_MS=60000
PYODIDE_MAX_MEMORY_MB=512
PYODIDE_PACKAGE_CACHE_SIZE=100

# File Upload Configuration
MAX_FILE_SIZE_MB=50
UPLOAD_DIRECTORY=./uploads
PLOTS_DIRECTORY=./plots

# Health Check Configuration
HEALTH_CHECK_TIMEOUT_MS=5000
HEALTH_CHECK_INTERVAL_MS=30000

# Process Management
PM2_INSTANCES=max
PM2_MAX_MEMORY_RESTART=1G
PM2_MAX_RESTARTS=10

# AWS Specific (if using ALB/ELB)
TRUST_PROXY=true
X_FORWARDED_PROTO=true

# Monitoring (optional for CloudWatch)
ENABLE_METRICS=true
METRICS_ENDPOINT=/api/metrics
